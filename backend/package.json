{
    "name": "feeds-backend",
    "version": "1.0.0",
    "description": "Feeds - Self-hosted feed reader backend",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "dev": "tsx watch src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "migrate": "node --input-type=module -e \"import { existsSync } from 'fs'; if (existsSync('dist/db/migrate.js')) { await import('./dist/db/migrate.js'); } else { const { spawnSync } = await import('child_process'); const result = spawnSync('npx', ['tsx', 'src/db/migrate.ts'], { stdio: 'inherit' }); process.exit(result.status ?? 0); }\"",
        "test": "vitest",
        "test:coverage": "vitest --run --coverage",
        "test:ci": "vitest --run --coverage --reporter=verbose"
    },
    "dependencies": {
        "@fastify/cors": "^9.0.1",
        "@fastify/multipart": "^8.3.0",
        "@fastify/static": "^7.0.4",
        "@mozilla/readability": "^0.5.0",
        "bcrypt": "^6.0.0",
        "better-sqlite3": "^12.6.2",
        "cheerio": "^1.0.0",
        "dotenv": "^17.2.3",
        "fastify": "^4.28.1",
        "feedparser": "^2.2.10",
        "jsdom": "^24.1.1",
        "jsonwebtoken": "^9.0.3",
        "node-cron": "^3.0.3",
        "pino": "^9.3.2",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/bcrypt": "^6.0.0",
        "@types/better-sqlite3": "^7.6.11",
        "@types/cheerio": "^0.22.35",
        "@types/feedparser": "^2.2.8",
        "@types/jsdom": "^21.1.7",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^22.5.0",
        "@types/node-cron": "^3.0.11",
        "@vitest/coverage-v8": "^2.0.5",
        "tsx": "^4.19.0",
        "typescript": "^5.5.4",
        "vitest": "^2.0.5"
    },
    "engines": {
        "node": ">=20.0.0"
    }
}
